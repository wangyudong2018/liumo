<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yiyun.dao.master.LmProductDao">

	<select id="get" resultType="com.yiyun.domain.LmProduct">
		select `id`,`title`,`content`,`agreemt`,`rate`,`people`,`logo`,`sort`,`state`,`create_time`,`update_time` from lm_product where id = #{value}
	</select>

	<select id="list" resultType="com.yiyun.domain.LmProduct">
		select `id`,`title`,`content`,`agreemt`,`rate`,`people`,`logo`,`sort`,`state`,`create_time`,`update_time` from lm_product where 1=1
		<if test="id != null and id != ''"> and id = #{id} </if>
		<if test="title != null and title != ''"> and title = #{title} </if>
		<if test="content != null and content != ''"> and content = #{content} </if>
		<if test="agreemt != null and agreemt != ''"> and agreemt = #{agreemt} </if>
		<if test="rate != null and rate != ''"> and rate = #{rate} </if>
		<if test="people != null and people != ''"> and people = #{people} </if>
		<if test="logo != null and logo != ''"> and logo = #{logo} </if>
		<if test="sort != null and sort != ''"> and sort = #{sort} </if>
		<if test="state != null and state != ''"> and state = #{state} </if>
		<if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		<if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		order by sort asc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="count" resultType="int">
		select count(*) from lm_product
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="title != null and title != ''"> and title = #{title} </if>
			<if test="content != null and content != ''"> and content = #{content} </if>
			<if test="agreemt != null and agreemt != ''"> and agreemt = #{agreemt} </if>
			<if test="rate != null and rate != ''"> and rate = #{rate} </if>
			<if test="people != null and people != ''"> and people = #{people} </if>
			<if test="logo != null and logo != ''"> and logo = #{logo} </if>
			<if test="sort != null and sort != ''"> and sort = #{sort} </if>
			<if test="state != null and state != ''"> and state = #{state} </if>
			<if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
			<if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		</where>
	</select>

	<insert id="save" parameterType="com.yiyun.domain.LmProduct" useGeneratedKeys="true" keyProperty="id">
		insert into lm_product
		(
		`title`,
		`content`,
		`agreemt`,
		`rate`,
		`people`,
		`logo`,
		`sort`,
		`state`,
		`create_time`,
		`update_time`
		)
		values
		(
		#{title},
		#{content},
		#{agreemt},
		#{rate},
		#{people},
		#{logo},
		#{sort},
		#{state},
		#{createTime},
		#{updateTime}
		)
	</insert>

	<update id="edit" parameterType="com.yiyun.domain.LmProduct">
		update lm_product
		<set>
			<if test="title != null">`title` = #{title}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="agreemt != null">`agreemt` = #{agreemt}, </if>
			<if test="rate != null">`rate` = #{rate}, </if>
			<if test="people != null">`people` = #{people}, </if>
			<if test="state != null">`logo` = #{logo}, </if>
			<if test="state != null">`sort` = #{sort}, </if>
			<if test="state != null">`state` = #{state}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="remove">
		delete from lm_product where id = #{value}
	</delete>

	<delete id="batchRemove">
		delete from lm_product where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>